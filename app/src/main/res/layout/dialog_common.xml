<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_272"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_button"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_24"
    android:paddingVertical="@dimen/dp_24">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/tvMessage"
            style="@style/styleFontWeight400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:textColor="@color/txtColorTextBlack"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btPositive"
            style="@style/styleFontWeight500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/txtColorTextBlack"
            android:textSize="@dimen/dp_16"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/btNegative"
            style="@style/styleFontWeight500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_32"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toStartOf="@+id/btPositive"
            android:textAlignment="viewEnd"
            android:textColor="@color/error_color"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

</LinearLayout>