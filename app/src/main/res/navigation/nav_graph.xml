<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mexpense.fragments.main.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_expenseMainFragment"
            app:destination="@id/expenseMainFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.mexpense.fragments.main.register.RegisterFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/expenseMainFragment"
        android:name="com.example.mexpense.fragments.main.expense.ExpenseMainFragment"
        android:label="fragment_expense_main"
        tools:layout="@layout/fragment_expense_main" >
        <action
            android:id="@+id/action_expenseMainFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/expenseFormFragment"
        android:name="com.example.mexpense.fragments.main.expense.ExpenseFormFragment"
        android:label="fragment_expense_form"
        tools:layout="@layout/fragment_expense_form" />
    <fragment
        android:id="@+id/tripMainFragment"
        android:name="com.example.mexpense.fragments.main.trip.TripMainFragment"
        android:label="fragment_trip_main"
        tools:layout="@layout/fragment_trip_main" />
    <fragment
        android:id="@+id/tripFormFragment"
        android:name="com.example.mexpense.fragments.main.trip.TripFormFragment"
        android:label="fragment_trip_form"
        tools:layout="@layout/fragment_trip_form" />
    <fragment
        android:id="@+id/expenseDetailsFragment"
        android:name="com.example.mexpense.fragments.main.expense.ExpenseDetailsFragment"
        android:label="fragment_expense_details"
        tools:layout="@layout/fragment_expense_details" />
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.mexpense.fragments.main.splash.SplashScreenFragment"
        android:label="SplashScreenFragment"
        tools:layout="@layout/fragment_spash_screen">
        <action
            android:id="@+id/action_splashScreenFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>