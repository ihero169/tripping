<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:innerRadiusRatio="2.5"
                android:shape="ring"
                android:thickness="@dimen/dp_10"
                android:useLevel="true">
                <!-- this line fixes the issue for lollipop api 21 -->

                <gradient
                    android:angle="0"
                    android:endColor="@color/blue_light"
                    android:startColor="@color/blue_light"
                    android:type="sweep"
                    android:useLevel="false" />
            </shape>
        </rotate>
    </item>
    <item android:bottom="@dimen/dp_121">
        <shape
            android:innerRadiusRatio="1000"
            android:shape="ring"
            android:thickness="@dimen/dp_5"
            android:useLevel="false">
            <solid android:color="@color/blue_light" />
        </shape>
    </item>
    <item>
        <rotate>
            <inset android:insetBottom="@dimen/dp_121">
                <shape
                    android:innerRadiusRatio="1000"
                    android:shape="ring"
                    android:thickness="@dimen/dp_5"
                    android:useLevel="false">
                    <solid android:color="@color/blue_light" />
                </shape>
            </inset>
        </rotate>
    </item>
</layer-list>
